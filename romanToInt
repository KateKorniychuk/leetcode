class Solution:
    def romanToInt(self, s: str) -> int:
        d = {'I': 1, 'V': 5, 'X': 10, 'L': 50, 'C': 100, 'D': 500, 'M': 1000}
        exseptions = {'IV', 'IX', 'XL', 'XC', 'CD', 'CM'}
        
        i=1
        result = d[s[0]]
        
        while i < len(s):
            if ((s[i-1] + s[i]) in exseptions):
                result += d[s[i]] - 2*d[s[i-1]]
            else:
                result += d[s[i]]
            i += 1
        
        return result
        
